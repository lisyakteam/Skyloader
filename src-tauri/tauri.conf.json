{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skyloader",
  "version": "1.0.3",
  "identifier": "skyloader",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Skyloader",
        "width": 800,
        "height": 480,
        "minWidth": 800,
        "minHeight": 480
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
